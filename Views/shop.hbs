<h1>🛍️ Shop</h1>

<div class="product-list">
  {{#each products}}
    <div class="product-card">
      <img src="{{this.image}}" alt="{{this.name}}" />
      <h3>{{this.name}}</h3>
      <p>${{this.price}}</p>
      <form action="/shop/add" method="POST">
        <input type="hidden" name="product_id" value="{{this.id}}" />
        <button type="submit">Add to Cart</button>
      </form>
    </div>
  {{/each}}
</div>
