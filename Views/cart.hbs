{{#if cart.length}}
  <table class="cart-table">
    <thead>
      <tr>
        <th>Image</th>
        <th>Product</th>
        <th>Price</th>
        <th>Qty</th>
        <th>Total</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      {{#each cart}}
        <tr>
          <td><img src="{{this.image}}" class="cart-img" /></td>
          <td>{{this.name}}</td>
          <td>${{this.price}}</td>
          <td>
            <form action="/cart/update" method="POST">
              <input type="hidden" name="cart_id" value="{{this.cartId}}" />
              <input type="number" name="quantity" value="{{this.quantity}}" min="1" />
              <button type="submit">Update</button>
            </form>
          </td>
          <td>${{multiply this.price this.quantity}}</td>
          <td>
            <form action="/cart/remove" method="POST">
              <input type="hidden" name="cart_id" value="{{this.cartId}}" />
              <button type="submit" class="btn-remove">Remove</button>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>

  <h3 class="cart-total">Total: ${{total}}</h3>
  <button class="checkout-btn">Checkout</button>
{{else}}
  <p>Your cart is empty.</p>
{{/if}}
